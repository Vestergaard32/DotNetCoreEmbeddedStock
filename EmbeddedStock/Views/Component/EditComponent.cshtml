@model Component

@{
    ViewBag.Title = "Create Component";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="EditComponent" asp-controller="Component" enctype="multipart/form-data">
    <input type="text" hidden="hidden" asp-for="ComponentId"/>

    <div class="form-group">
        <label>Choose Component Type:</label>
        <select asp-for="ComponentTypeId" asp-items="@ViewBag.ComponentTypes"></select>
    </div>

    <div class="form-group">
        <label>Component Number</label>
        <input asp-for="ComponentNumber" type="text" placeholder="Component Number" />
    </div>

    <div class="form-group">
        <label>Serial Number</label>
        <input asp-for="SerialNo" type="text" placeholder="Serial Number" />
    </div>

    <div class="form-group">
        <label>Admin Comment</label>
        <input asp-for="AdminComment" type="text" placeholder="Admin Comment" />
    </div>

    <div class="form-group">
        <label>Component Status</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<ComponentStatus>()"></select>
    </div>

    <button type="submit" class="btn btn-success" name="buttonValue" value="Update">Update</button>
    <button type="submit" class="btn btn-danger" name="buttonValue" value="Cancel">Cancel</button>
</form>



