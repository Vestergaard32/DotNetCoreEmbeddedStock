@model ComponentType

@{
    ViewBag.Title = "Create new component type";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="CreateComponentType" asp-controller="ComponentType" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ComponentName"></label>
        <input asp-for="ComponentName" type="text" placeholder="Component Name"/>
    </div>
    
    <div class="form-group">
        <label asp-for="ComponentInfo"></label>
        <input asp-for="ComponentInfo" type="text" placeholder="Component info"/>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" type="text" placeholder="Location"/>
    </div>

    <div class="form-group">
        <label asp-for="Datasheet"></label>
        <input asp-for="Datasheet" type="text" placeholder="Datasheet"/>
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <input asp-for="Manufacturer" type="text" placeholder="Manufacturer"/>    
    </div>
    
    <div class="form-group">
        <select asp-for="Status" asp-items="@Html.GetEnumSelectList<ComponentTypeStatus>()"></select>
    </div>

    <div class="form-group">
        <select asp-for="ComponentTypeCategories" asp-items="@ViewBag.CategoryCollection" name="CategoryIds" multiple="multiple"></select>
    </div>
    
    <div class="form-group">
        <label asp-for="WikiLink"></label>
        <input asp-for="WikiLink" type="text" placeholder="Wiki link" />
    </div>
    
    <div class="form-group">
        <label asp-for="AdminComment"></label>
        <input asp-for="AdminComment" type="text" placeholder="Admin comment" />
    </div>
    
    <div class="form-group">
        <label>Image</label>
        <input type="file" accept="image/*" name="image"/>
    </div>

    <button type="submit" class="btn btn-success" name="Button" value="Create">Create</button>
    <button type="submit" class="btn btn-danger" name="Button" value="Cancel">Cancel</button>

</form>

